description "Simple echo service"

#installing node to the container
build script
  apt-get -y install --force-yes git curl apt-transport-https lsof
  apt-get -y install --force-yes software-properties-common
  apt-get -y install --force-yes python g++ make git
  add-apt-repository -y ppa:chris-lea/node.js
  apt-get -y update
  apt-get -y install --force-yes nodejs
end script

#use npm to get current, then start
run script
  npm install
  npm start
end script
